---
const { subtitle, description } = Astro.props;
---

<div class="w-full flex flex-col justify-center mb-8">
    <h3 class="text-4xl font-roboto text-white mb-4">{subtitle}</h3>
    <div class="flex items-start mb-4">
        <i class="fas fa-check text-green-500 text-2xl mr-2"></i>
        <p class="text-white font-roboto text-lg">{description}</p>
    </div>
</div>